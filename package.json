{
  "name": "app-qlda",
  "private": true,
  "version": "1.0.2",
  "description": "Hệ thống Quản lý Dự án - Tư vấn & Giám sát Xây dựng",
  "author": "Your Company",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5173",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "icon:gen": "node scripts/generate-icon.mjs",
    "icon:prep": "node scripts/prepare-icon.mjs",
    "icon:rebuild": "npm run icon:prep && npm run icon:gen && npm run electron:build:win",
    "win:kill": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/kill-ibst.ps1",
    "clean": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/clean-project.ps1",
    "win:clean:appdata": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/clean-old-appdata.ps1",
    "win:rebuild": "npm run win:kill && npm run clean && npm run win:clean:appdata && npm run electron:build:win",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:dir": "npm run build && electron-builder --dir",
    "cap:init": "cap init app-qlda 'IBST BIM - Quản lý Dự án' --web-dir=dist",
    "cap:add:android": "cap add android",
    "cap:add:ios": "cap add ios",
    "cap:sync": "cap sync",
    "cap:open:android": "cap open android",
    "cap:open:ios": "cap open ios",
    "mobile:build": "vite build && cap sync"
  },
  "dependencies": {
    "@capacitor/core": "^6.2.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@supabase/supabase-js": "^2.75.1",
    "astral-regex": "^2.0.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "lucide-react": "^0.544.0",
    "papaparse": "^5.5.3",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.296",
    "rbush": "^4.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.64.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.9.3",
    "react-speech-recognition": "^4.0.1",
    "recharts": "^3.2.1",
    "tesseract.js": "^6.0.1",
    "xlsx": "^0.18.5",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@capacitor/android": "^6.2.0",
    "@capacitor/cli": "^6.2.0",
    "@capacitor/ios": "^6.2.0",
    "@eslint/js": "^9.36.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jimp": "^1.6.0",
    "png-to-ico": "^2.1.8",
    "postcss": "^8.5.6",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.18",
    "terser": "^5.44.0",
    "vite": "npm:rolldown-vite@7.1.14",
    "vite-plugin-singlefile": "^2.3.0",
    "wait-on": "^9.0.1"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  }
}
